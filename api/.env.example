# Server Configuration
PORT=4000
NODE_ENV=development

# JWT Configuration - CHANGE THIS IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-with-256-bit-key

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/universityDB
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/universityDB

# Security Settings
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# File Upload Limits
MAX_FILE_SIZE=5242880
MAX_FILES=10

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Admin Credentials (Optional - for first admin user)
ADMIN_EMAIL=admin@alhikmah.edu.ng
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure-admin-password